# Web App Configuration
VITE_APP_NAME=ContentAutoPilot
VITE_APP_VERSION=1.0.0
VITE_NODE_ENV=production

# Server Configuration - Not needed for production build
VITE_WEB_HOST=app.contentautopilot.com
VITE_WEB_PORT=443
VITE_WEB_PROTOCOL=https

# API Configuration - Production API
VITE_API_HOST=api.contentautopilot.com
VITE_API_PORT=443
VITE_API_PROTOCOL=https
VITE_API_BASE_URL=https://api.contentautopilot.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000

# Feature Flags - Production features
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_REAL_TIME_UPDATES=true

# External Services - Production tracking
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X
VITE_HOTJAR_ID=1234567

# Development - Disabled in production
VITE_MOCK_API=false
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=error